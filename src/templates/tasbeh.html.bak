{% extends "base.html" %}

{% block title %}التسبيح الإلكتروني - Enhanced Digital Tasbeh{% endblock %}

{% block styles %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Amiri:wght@400;700;900&family=Cairo:wght@300;400;600;700;900&family=Scheherazade+New:wght@400;700&display=swap');
        
        :root {
            --primary-color: #4CAF50;
            --primary-gradient: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
            --accent-color: #27ae60;
            --warning-color: #e74c3c;
            --info-color: #3498db;
            --light-bg: rgba(255, 255, 255, 0.1);
            --card-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            --button-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            --border-radius: 15px;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }
        
        body {
            font-family: 'Cairo', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--primary-gradient);
            margin: 0;
            min-height: 100vh;
            direction: rtl;
            position: relative;
            overflow-x: hidden;
            color: #ffffff;
            padding-bottom: 50px;
        }
        
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 119, 198, 0.2) 0%, transparent 50%);
            z-index: -1;
            pointer-events: none;
        }
        
        .navbar {
            background: linear-gradient(90deg, rgba(0,0,0,0.9), rgba(0,0,0,0.7));
            backdrop-filter: blur(10px);
            padding: 1rem 2rem;
            margin-bottom: 30px;
            direction: ltr;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }
        
        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            padding: 10px 20px;
            border-radius: 25px;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.1);
        }
        
        .navbar a:hover {
            background: rgba(255,255,255,0.2);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255,255,255,0.2);
        }
        
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
            animation: fadeInDown 1s ease-out;
        }
        
        .header h1 {
            font-family: 'Amiri', serif;
            font-size: 3em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.5);
            background: linear-gradient(45deg, #fff, #f0f0f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .header p {
            font-size: 1.2em;
            opacity: 0.9;
        }
        
        /* Enhanced Statistics Dashboard */
        .stats-dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: linear-gradient(135deg, rgba(255,255,255,0.15), rgba(255,255,255,0.05));
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.2);
            padding: 25px;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }
        
        .stat-card:hover::before {
            left: 100%;
        }
        
        .stat-icon {
            font-size: 2.5em;
            margin-bottom: 10px;
            display: block;
        }
        
        .stat-value {
            font-size: 2.5em;
            font-weight: bold;
            margin: 10px 0;
            background: linear-gradient(45deg, #ffd700, #ffed4e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .stat-label {
            font-family: 'Amiri', serif;
            color: white;
            font-size: 1.1em;
            opacity: 0.9;
        }
        
        .total-counter {
            background: linear-gradient(135deg, rgba(255,255,255,0.15), rgba(255,255,255,0.05));
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.2);
            padding: 30px;
            border-radius: 25px;
            text-align: center;
            margin-bottom: 40px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
            animation: fadeInUp 1s ease-out 0.2s both;
        }
        
        .total-counter h3 {
            font-family: 'Amiri', serif;
            color: white;
            font-size: 1.8em;
            margin-bottom: 15px;
            text-shadow: 1px 1px 4px rgba(0,0,0,0.3);
        }
        
        .total-count {
            font-size: 4em;
            font-weight: bold;
            background: linear-gradient(45deg, #ffd700, #ffed4e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 15px 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            animation: pulse 2s infinite;
        }
        
        .phrase-container {
            background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.85));
            border-radius: 25px;
            padding: 30px;
            margin: 25px 0;
            box-shadow: 
                0 8px 32px rgba(0,0,0,0.1),
                0 2px 8px rgba(0,0,0,0.05);
            transition: all 0.4s ease;
            border: 1px solid rgba(255,255,255,0.2);
            animation: fadeInUp 0.8s ease-out;
            position: relative;
            overflow: hidden;
        }
        
        .phrase-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            transition: left 0.5s ease;
        }
        
        .phrase-container:hover::before {
            left: 100%;
        }
        
        .phrase-container:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 
                0 15px 40px rgba(0,0,0,0.15),
                0 5px 15px rgba(0,0,0,0.1);
        }
        
        .phrase-text {
            font-family: 'Amiri', serif;
            font-size: 2.2em;
            font-weight: 700;
            text-align: center;
            color: #2c3e50;
            margin-bottom: 25px;
            padding: 20px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-radius: 15px;
            box-shadow: inset 0 2px 8px rgba(0,0,0,0.1);
            position: relative;
            z-index: 1;
        }
        
        .counter-section {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
            position: relative;
            z-index: 1;
        }
        
        /* Enhanced Counter with Progress Ring */
        .count-wrapper {
            position: relative;
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .progress-ring {
            position: relative;
            width: 120px;
            height: 120px;
        }
        
        .progress-ring-circle {
            width: 100%;
            height: 100%;
            transform: rotate(-90deg);
        }
        
        .progress-ring-background {
            fill: none;
            stroke: rgba(255,255,255,0.2);
            stroke-width: 8;
        }
        
        .progress-ring-progress {
            fill: none;
            stroke: #27ae60;
            stroke-width: 8;
            stroke-linecap: round;
            stroke-dasharray: 314.159;
            stroke-dashoffset: 314.159;
            transition: stroke-dashoffset 0.5s ease;
        }
        
        .progress-ring-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 1.8em;
            font-weight: bold;
            color: #27ae60;
        }
        
        /* Quick Add Buttons */
        .quick-add-section {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin: 15px 0;
        }
        
        .quick-add-btn {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(52,152,219,0.3);
        }
        
        .quick-add-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(52,152,219,0.4);
        }
        
        /* Floating Action Buttons */
        .floating-actions {
            position: fixed;
            right: 20px;
            bottom: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            z-index: 1000;
        }
        
        .fab {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            border: none;
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
            color: white;
            font-size: 1.5em;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(155,89,182,0.4);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .fab:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 12px 35px rgba(155,89,182,0.5);
        }
        
        /* Theme Toggle */
        .theme-toggle {
            background: linear-gradient(135deg, #f39c12, #e67e22);
        }
        
        /* Sound Toggle */
        .sound-toggle {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }
        
        .sound-toggle.muted {
            background: linear-gradient(135deg, #95a5a6, #7f8c8d);
        }
        
        /* Achievement Notification */
        .achievement-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(135deg, #2ecc71, #27ae60);
            color: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(46,204,113,0.4);
            transform: translateX(100%);
            transition: transform 0.5s ease;
            z-index: 1001;
            max-width: 300px;
        }
        
        .achievement-notification.show {
            transform: translateX(0);
        }
        
        .achievement-icon {
            font-size: 2em;
            margin-bottom: 10px;
        }
        
        /* Floating Numbers Animation */
        .floating-number {
            position: absolute;
            color: #27ae60;
            font-size: 1.5em;
            font-weight: bold;
            pointer-events: none;
            animation: floatUp 1.5s ease-out forwards;
        }
        
        @keyframes floatUp {
            0% {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
            100% {
                opacity: 0;
                transform: translateY(-50px) scale(1.2);
            }
        }
        
        .count-display {
            font-size: 3em;
            font-weight: bold;
            background: linear-gradient(45deg, #27ae60, #2ecc71);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            min-width: 120px;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        
        .count-btn {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: none;
            font-size: 1.8em;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        .count-btn.main {
            background: linear-gradient(135deg, #27ae60, #2ecc71, #58d68d);
            color: white;
            box-shadow: 
                0 8px 25px rgba(39,174,96,0.4),
                0 2px 8px rgba(39,174,96,0.2);
        }
        
        .count-btn.main:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 
                0 12px 35px rgba(39,174,96,0.5),
                0 5px 15px rgba(39,174,96,0.3);
        }
        
        .count-btn.main:active {
            transform: scale(0.95);
            animation: ripple 0.6s ease-out;
        }
        
        .reset-btn {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(231,76,60,0.3);
        }
        
        .reset-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(231,76,60,0.4);
        }
        
        .last-updated {
            font-size: 13px;
            color: #7f8c8d;
            text-align: center;
            margin-top: 15px;
            opacity: 0.8;
            position: relative;
            z-index: 1;
        }
        
        .loading {
            opacity: 0.6;
            pointer-events: none;
            transform: scale(0.95);
        }
        
        .islamic-reminder {
            background: linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(34, 197, 94, 0.1));
            border-radius: 20px;
            padding: 20px;
            margin: 20px 0;
            text-align: center;
            color: white;
            border: 1px solid rgba(34, 197, 94, 0.3);
            animation: fadeInUp 1s ease-out 0.5s both;
        }

        .dua-section {
            background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(168, 85, 247, 0.1));
            border-radius: 20px;
            padding: 25px;
            margin: 25px 0;
            text-align: center;
            color: white;
            border: 1px solid rgba(168, 85, 247, 0.3);
        }

        .dua-text {
            font-family: 'Amiri', serif;
            font-size: 1.4em;
            margin: 15px 0;
            line-height: 1.8;
        }

        .hadith-quote {
            font-size: 0.9em;
            opacity: 0.8;
            font-style: italic;
            margin-top: 15px;
            padding: 10px;
            background: rgba(0,0,0,0.1);
            border-radius: 10px;
        }
        
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        @keyframes ripple {
            0% {
                box-shadow: 0 0 0 0 rgba(255,255,255,0.7);
            }
            100% {
                box-shadow: 0 0 0 20px rgba(255,255,255,0);
            }
        }
        
        /* Premium Button */
        .premium-btn {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 25px;
            background: linear-gradient(135deg, #f1c40f, #f39c12);
            border-radius: 30px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            box-shadow: 0 5px 15px rgba(243, 156, 18, 0.4);
            transition: all 0.3s ease;
            border: 2px solid rgba(255, 255, 255, 0.2);
            animation: pulse 2s infinite;
        }
        
        .premium-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(243, 156, 18, 0.5);
            background: linear-gradient(135deg, #f39c12, #e67e22);
        }
        
        @media (max-width: 768px) {
            .phrase-text {
                font-size: 1.8em;
            }
            .count-display {
                font-size: 2.5em;
            }
            .count-btn {
                width: 80px;
                height: 80px;
                font-size: 1.5em;
            }
            .total-count {
                font-size: 3em;
            }
            .header h1 {
                font-size: 2.5em;
            }
        }
        
        @media (max-width: 480px) {
            .counter-section {
                gap: 20px;
            }
            .phrase-container {
                padding: 20px;
            }
        }
        
        .success-animation {
            animation: successPulse 0.6s ease-out;
        }
        
        @keyframes successPulse {
            0% { transform: scale(1); }
            50% { 
                transform: scale(1.1); 
                background: linear-gradient(135deg, #2ecc71, #27ae60, #58d68d);
            }
            100% { transform: scale(1); }
        }
        
        /* Quick Add Buttons */
        .quick-add-section {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin: 15px 0;
            flex-wrap: wrap;
        }
        
        .quick-add-btn {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(52,152,219,0.3);
        }
        
        .quick-add-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(52,152,219,0.4);
        }
        
        .quick-add-btn:active {
            transform: scale(0.95);
        }
        
        /* Floating Numbers Animation */
        .floating-number {
            position: absolute;
            color: #27ae60;
            font-size: 1.5em;
            font-weight: bold;
            pointer-events: none;
            animation: floatUp 1.5s ease-out forwards;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        @keyframes floatUp {
            0% {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
            100% {
                opacity: 0;
                transform: translateY(-50px) scale(1.2);
            }
        }
        
        /* Dark Theme Styles */
        body.dark-theme {
            background: linear-gradient(135deg, #2c3e50 0%, #1a1a2e 100%);
        }
        
        body.dark-theme::before {
            background: 
                radial-gradient(circle at 20% 80%, rgba(41, 128, 185, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(22, 160, 133, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(52, 152, 219, 0.1) 0%, transparent 50%);
        }
        
        body.dark-theme .phrase-container {
            background: linear-gradient(135deg, rgba(44, 62, 80, 0.95), rgba(52, 73, 94, 0.85));
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        body.dark-theme .phrase-text {
            background: linear-gradient(135deg, #34495e, #2c3e50);
            color: #ecf0f1;
        }
        
        body.dark-theme .count-display {
            background: linear-gradient(45deg, #3498db, #2980b9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        body.dark-theme .stat-value,
        body.dark-theme .total-count {
            background: linear-gradient(45deg, #3498db, #2980b9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        body.dark-theme .islamic-reminder {
            background: linear-gradient(135deg, rgba(41, 128, 185, 0.2), rgba(41, 128, 185, 0.1));
            border: 1px solid rgba(41, 128, 185, 0.3);
        }
        
        body.dark-theme .dua-section {
            background: linear-gradient(135deg, rgba(142, 68, 173, 0.2), rgba(142, 68, 173, 0.1));
            border: 1px solid rgba(142, 68, 173, 0.3);
        }
        
        body.dark-theme .hadith-quote {
            background: rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <nav class="navbar" style="direction: ltr;">
        <a href="{{ url_for('home') }}">🏠 Home</a>
        <a href="{{ url_for('my_phrases') }}">💭 My Phrases</a>
        <a href="{{ url_for('tasbeh') }}">📿 Tasbeh</a>
        <a href="{{ url_for('prayer_times') }}">🕌 Prayer Times</a>
        <a href="{{ url_for('quran') }}">📖 Quran</a>
        <a href="{{ url_for('logout') }}">🚪 Logout</a>
    </nav>

    <div class="container">
        <div class="header">
            <h1>🕌 التسبيح الإلكتروني</h1>
            <p>Digital Tasbeh for {{ username }}</p>
            <a href="{{ url_for('tasbeh_premium') }}" class="premium-btn">⭐ Try Premium Version ⭐</a>
        </div>

        <div class="islamic-reminder">
            <h4>🤲 فضل الذكر</h4>
            <p>"الذين آمنوا وتطمئن قلوبهم بذكر الله ألا بذكر الله تطمئن القلوب"</p>
            <p>"Those who believe and whose hearts are assured by the remembrance of Allah"</p>
        </div>

        <div class="total-counter">
            <h3>إجمالي التسبيحات</h3>
            <div class="total-count" id="totalCount">0</div>
            <p>Total Dhikr Count</p>
        </div>

        <div class="dua-section">
            <h4>🤲 دعاء بعد التسبيح</h4>
            <div class="dua-text">
                "رَبَّنَا آتِنَا فِي الدُّنْيَا حَسَنَةً وَفِي الْآخِرَةِ حَسَنَةً وَقِنَا عَذَابَ النَّارِ"
            </div>
            <p>"Our Lord, give us good in this world and good in the next world, and save us from the punishment of the Fire"</p>
        </div>

        {% for phrase_data in phrases %}
        <div class="phrase-container" style="animation-delay: {{ loop.index0 * 0.1 }}s">
            <div class="phrase-text">{{ phrase_data.phrase }}</div>
            
            <div class="counter-section">
                <button class="reset-btn" onclick="resetCount('{{ phrase_data.phrase }}', this, {{ loop.index0 }})">
                    🔄 Reset
                </button>
                
                <div class="count-display" id="count-{{ loop.index0 }}">
                    {{ phrase_data.count }}
                </div>
                
                <button class="count-btn main" onclick="incrementCount('{{ phrase_data.phrase }}', {{ loop.index0 }}, this)">
                    +1
                </button>
            </div>
            
            <!-- Quick Add Buttons -->
            <div class="quick-add-section">
                <button class="quick-add-btn" onclick="quickAdd('{{ phrase_data.phrase }}', 10, {{ loop.index0 }})">
                    +10
                </button>
                <button class="quick-add-btn" onclick="quickAdd('{{ phrase_data.phrase }}', 33, {{ loop.index0 }})">
                    +33 سنة
                </button>
                <button class="quick-add-btn" onclick="quickAdd('{{ phrase_data.phrase }}', 100, {{ loop.index0 }})">
                    +100
                </button>
            </div>
            
            {% if phrase_data.last_updated %}
            <div class="last-updated">
                آخر تحديث: {{ phrase_data.last_updated }}
            </div>
            {% endif %}
            
            <div class="hadith-quote">
                {% if phrase_data.phrase == "سبحان الله" %}
                    "من قال سبحان الله وبحمده في يوم مائة مرة حطت خطاياه"
                {% elif phrase_data.phrase == "الحمد لله" %}
                    "الحمد لله تملأ الميزان"
                {% elif phrase_data.phrase == "الله أكبر" %}
                    "التكبير يملأ ما بين السماء والأرض"
                {% elif phrase_data.phrase == "لا إله إلا الله" %}
                    "أفضل الذكر لا إله إلا الله"
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    
    <!-- Floating Action Buttons -->
    <div class="floating-actions">
        <button class="fab scroll-top-btn" onclick="scrollToTop()">
            <i class="fas fa-arrow-up"></i>
        </button>
        <button class="fab sound-toggle" id="soundToggle" onclick="toggleSound()">
            <i class="fas fa-volume-up"></i>
        </button>
        <button class="fab theme-toggle" id="themeToggle" onclick="toggleTheme()">
            <i class="fas fa-moon"></i>
        </button>
    </div>
    
    <!-- Achievement Notification -->
    <div class="achievement-notification" id="achievementNotification">
        <div class="achievement-icon">🎉</div>
        <div class="achievement-title">Achievement Unlocked!</div>
        <div class="achievement-text" id="achievementText"></div>
    </div>

    <script>
        // Load total count on page load
        window.onload = function() {
            updateTotalCount();
            // Load theme preference
            const savedTheme = localStorage.getItem('tasbehTheme');
            if (savedTheme === 'dark') {
                document.body.classList.add('dark-theme');
                document.getElementById('themeToggle').innerHTML = '<i class="fas fa-sun"></i>';
            }
            
            // Load sound preference
            const soundEnabled = localStorage.getItem('tasbehSound') !== 'off';
            if (!soundEnabled) {
                document.getElementById('soundToggle').classList.add('muted');
                document.getElementById('soundToggle').innerHTML = '<i class="fas fa-volume-mute"></i>';
            }
        };

        function incrementCount(phrase, index, button) {
            button.classList.add('loading');
            
            fetch('/tasbeh/count', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({phrase: phrase})
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const countElement = document.getElementById('count-' + index);
                    countElement.textContent = data.count;
                    updateTotalCount();
                    
                    // Success animation
                    button.classList.add('success-animation');
                    countElement.style.transform = 'scale(1.2)';
                    
                    setTimeout(() => {
                        button.classList.remove('success-animation');
                        countElement.style.transform = '';
                    }, 600);
                    
                    // Play success sound
                    if (localStorage.getItem('tasbehSound') !== 'off') {
                        playSuccessSound();
                    }
                    
                    // Check for achievements
                    checkAchievements(phrase, data.count);
                } else {
                    alert('خطأ في التحديث / Error updating count');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('خطأ في الاتصال / Connection error');
            })
            .finally(() => {
                button.classList.remove('loading');
            });
        }

        function resetCount(phrase, button, index) {
            if (!confirm('هل أنت متأكد من إعادة تعيين العداد؟\nAre you sure you want to reset this counter?')) {
                return;
            }
            
            button.classList.add('loading');
            
            fetch('/tasbeh/reset', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({phrase: phrase})
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const countElement = document.getElementById('count-' + index);
                    countElement.textContent = '0';
                    updateTotalCount();
                    
                    // Reset animation
                    countElement.style.transform = 'scale(0.8)';
                    setTimeout(() => {
                        countElement.style.transform = '';
                    }, 300);
                } else {
                    alert('خطأ في إعادة التعيين / Error resetting count');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('خطأ في الاتصال / Connection error');
            })
            .finally(() => {
                button.classList.remove('loading');
            });
        }

        function updateTotalCount() {
            fetch('/tasbeh/total')
            .then(response => response.json())
            .then(data => {
                const totalElement = document.getElementById('totalCount');
                totalElement.textContent = data.total;
                
                // Animate total count update
                totalElement.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    totalElement.style.transform = '';
                }, 300);
                
                // Check for total count achievements
                checkTotalAchievements(data.total);
            })
            .catch(error => {
                console.error('Error updating total:', error);
            });
        }
        
        function quickAdd(phrase, amount, index) {
            const button = document.querySelector(`.quick-add-btn[onclick="quickAdd('${phrase}', ${amount}, ${index})"]`);
            button.classList.add('loading');
            
            fetch('/tasbeh/quick-add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({phrase: phrase, amount: amount})
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const countElement = document.getElementById('count-' + index);
                    countElement.textContent = data.count;
                    updateTotalCount();
                    
                    // Show floating +number animation
                    const floatingNumber = document.createElement('div');
                    floatingNumber.className = 'floating-number';
                    floatingNumber.textContent = '+' + amount;
                    
                    // Position the floating number near the count display
                    const rect = countElement.getBoundingClientRect();
                    floatingNumber.style.left = (rect.left + rect.width/2) + 'px';
                    floatingNumber.style.top = rect.top + 'px';
                    
                    document.body.appendChild(floatingNumber);
                    
                    // Remove the element after animation completes
                    setTimeout(() => {
                        document.body.removeChild(floatingNumber);
                    }, 1500);
                    
                    // Success animation
                    countElement.style.transform = 'scale(1.2)';
                    
                    setTimeout(() => {
                        countElement.style.transform = '';
                    }, 600);
                    
                    // Play success sound
                    if (localStorage.getItem('tasbehSound') !== 'off') {
                        playSuccessSound();
                    }
                    
                    // Check for achievements
                    checkAchievements(phrase, data.count);
                } else {
                    alert('خطأ في التحديث / Error updating count');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('خطأ في الاتصال / Connection error');
            })
            .finally(() => {
                button.classList.remove('loading');
            });
        }

        function playSuccessSound() {
            try {
                // Create a simple beep sound
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.setValueAtTime(800, audioContext.currentTime);
                gainNode.gain.setValueAtTime(0.1, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.1);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.1);
            } catch (e) {
                // Audio not supported, ignore
            }
        }
        
        // Theme toggle function
        function toggleTheme() {
            const body = document.body;
            const themeButton = document.getElementById('themeToggle');
            
            body.classList.toggle('dark-theme');
            
            if (body.classList.contains('dark-theme')) {
                themeButton.innerHTML = '<i class="fas fa-sun"></i>';
                localStorage.setItem('tasbehTheme', 'dark');
            } else {
                themeButton.innerHTML = '<i class="fas fa-moon"></i>';
                localStorage.setItem('tasbehTheme', 'light');
            }
        }
        
        // Sound toggle function
        function toggleSound() {
            const soundButton = document.getElementById('soundToggle');
            const isMuted = soundButton.classList.toggle('muted');
            
            if (isMuted) {
                soundButton.innerHTML = '<i class="fas fa-volume-mute"></i>';
                localStorage.setItem('tasbehSound', 'off');
            } else {
                soundButton.innerHTML = '<i class="fas fa-volume-up"></i>';
                localStorage.setItem('tasbehSound', 'on');
                
                // Play a test sound
                playSuccessSound();
            }
        }
        
        // Scroll to top function
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }
        
        // Achievement system
        function checkAchievements(phrase, count) {
            const milestones = [33, 100, 500, 1000, 10000];
            
            for (let milestone of milestones) {
                if (count === milestone) {
                    showAchievement(`أحسنت! لقد وصلت إلى ${milestone} تسبيحة من "${phrase}"`);
                    break;
                }
            }
        }
        
        function checkTotalAchievements(total) {
            const milestones = [100, 500, 1000, 5000, 10000, 100000];
            
            const lastMilestone = parseInt(localStorage.getItem('lastTotalMilestone') || '0');
            
            for (let milestone of milestones) {
                if (total >= milestone && lastMilestone < milestone) {
                    showAchievement(`ما شاء الله! لقد وصلت إلى ${milestone} تسبيحة في المجموع`);
                    localStorage.setItem('lastTotalMilestone', milestone.toString());
                    break;
                }
            }
        }
        
        function showAchievement(message) {
            const notification = document.getElementById('achievementNotification');
            const textElement = document.getElementById('achievementText');
            
            textElement.textContent = message;
            notification.classList.add('show');
            
            // Hide notification after 5 seconds
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }

        // Auto-save scroll position
        window.addEventListener('beforeunload', function() {
            localStorage.setItem('tasbehScrollPosition', window.pageYOffset);
        });

        window.addEventListener('load', function() {
            const scrollPosition = localStorage.getItem('tasbehScrollPosition');
            if (scrollPosition) {
                window.scrollTo(0, parseInt(scrollPosition));
                localStorage.removeItem('tasbehScrollPosition');
            }
        });
    </script>
</body>
</html>
