# الإعدادات البيئية للتطبيق الإسلامي

# OpenWeatherMap API Key
# احصل على مفتاح مجاني من: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_api_key_here

# إعدادات Flask
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///app.db

# إعدادات التطبيق
APP_NAME=التطبيق الإسلامي الشامل
APP_VERSION=2.0
DEFAULT_LANGUAGE=ar
DEFAULT_TIMEZONE=Asia/Riyadh

# إعدادات الطقس
WEATHER_UPDATE_INTERVAL=300000
WEATHER_UNITS=metric
WEATHER_LANG=ar

# إعدادات مواقيت الصلاة
PRAYER_METHOD=2
PRAYER_UPDATE_INTERVAL=300000

# إعدادات التنبيهات
ENABLE_NOTIFICATIONS=true
ENABLE_PRAYER_ALERTS=true
ENABLE_DHIKR_REMINDERS=true

# ملاحظة: لا تضع هذا الملف في Git مع المفاتيح الحقيقية
# استخدم .env.example كنموذج واتبع الممارسات الآمنة
